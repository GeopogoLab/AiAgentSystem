# ========================================
# Tea Order Agent - Environment Variables
# Copy this file to .env and fill real secrets before running.
# ========================================

# ===================== AssemblyAI (Primary STT) =====================
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here
ASSEMBLYAI_STREAMING_URL=wss://api.assemblyai.com/v2/realtime/ws
ASSEMBLYAI_STREAMING_SAMPLE_RATE=16000
ASSEMBLYAI_STREAMING_ENCODING=pcm_s16le
ASSEMBLYAI_STREAMING_MODEL=best
ASSEMBLYAI_CONNECTION_TIMEOUT=3.0
ASSEMBLYAI_TTS_VOICE=alloy

# ===================== Whisper Fallback (Modal/Offline STT) =====================
WHISPER_ENABLED=true
WHISPER_SERVICE_URL=wss://your-username--whisper-stt-wrapper.modal.run/ws/stt
WHISPER_API_KEY=
WHISPER_MODEL=medium
WHISPER_TIMEOUT=10.0

# ===================== Text-to-Speech =====================
# Local-first TTS (use `local` for offline models, `assemblyai` for cloud, `gtts` fallback)
TTS_PROVIDER=local            # options: assemblyai, gtts, local
GTTS_LANGUAGE=en
GTTS_SLOW=false
LOCAL_TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
LOCAL_TTS_DEVICE=cuda
LOCAL_TTS_SPEAKER=
LOCAL_TTS_FORMAT=wav

# ===================== LLM Routing =====================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENAI_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct
OPENROUTER_SITE_URL=https://your-site-url.example.com
OPENROUTER_SITE_NAME=Tea Order Agent
OPENROUTER_TIMEOUT=5.0
VLLM_TIMEOUT=10.0

# ===================== vLLM Backup (Modal or Linux deployment) =====================
VLLM_BASE_URL=https://your-modal-vllm-instance/v1
VLLM_API_KEY=
VLLM_MODEL=meta-llama/Llama-3.3-70B-Instruct
VLLM_GPU_COUNT=2
VLLM_TENSOR_PARALLEL=2

# ===================== Database =====================
DATABASE_PATH=./tea_orders.db

# ===================== Server =====================
HOST=0.0.0.0
PORT=8000
