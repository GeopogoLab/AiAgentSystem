# AssemblyAI API Key
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# OpenRouter API Key（优先）或 OpenAI API Key（兼容）
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENAI_API_KEY=

# OpenRouter 自定义（可选）
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct
OPENROUTER_SITE_URL=https://your-site-url.example.com
OPENROUTER_SITE_NAME=Tea Order Agent
ASSEMBLYAI_TTS_VOICE=alloy

# LLM 超时配置（秒）
# OpenRouter 超时阈值，超时后自动降级到 vLLM
OPENROUTER_TIMEOUT=5.0
# vLLM 超时阈值（通常比 OpenRouter 更宽松，因为可能有冷启动）
VLLM_TIMEOUT=10.0

# vLLM 备选（Modal 部署的 Llama 3.3 70B，OpenRouter 不可用或超时时降级）
# 默认使用 Modal 部署的 Llama 3.3 70B，如不需要可留空禁用备份
VLLM_BASE_URL=https://ybpang-1--vllm-llama33-70b-int8-wrapper.modal.run/v1
VLLM_API_KEY=your-modal-vllm-api-key
VLLM_MODEL=meta-llama/Llama-3.3-70B-Instruct

# Database
DATABASE_PATH=./tea_orders.db

# Server
HOST=0.0.0.0
PORT=8000
